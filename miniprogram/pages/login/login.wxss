/* pages/login/login.wxss */
page{ 
  height: 100%; 
 } 
 .container { 
  height: 100%; 
  display: flex; 
  flex-direction: column; 
  padding: 0; 
  box-sizing: border-box; 
  background-color: #f2f2f2 
 }

 .header {
  width: 100%;
  margin-top: 40rpx;
  text-align: center;
 }
 .header-img {
  width: 400rpx;
  height: 400rpx;
 }
 .login-view { 
  margin-top: 40rpx;
  margin-left: 90rpx;
  margin-right: 90rpx;
  justify-self: center;
 }

 .inputView {
  background-color: #fff; 
  line-height: 88rpx; 
  
 }

 .top {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
 }

 .bottom {
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
 }
 
 .nameImage, .keyImage { 
  margin-left: 44rpx;
  vertical-align: middle; 
  width: 28rpx; 
  height: 28rpx 
 } 
  
 .loginLab { 
  margin-left: 20rpx;
  margin-right: 30rpx;
  vertical-align: middle; 
  color: #545454; 
  font-size: 28rpx 
 } 

 .inputText {
  float: right;
  text-align: right;
  margin-right: 44rpx;
  margin-top: 24rpx;
  color: #cccccc; 
  font-size: 28rpx 
 }
  
 .line { 
  width: 100%; 
  height: 2rpx; 
  background-color: #cccccc; 
  margin-top: 2rpx; 
 } 

 .loginBtnView { 
  width: 100%; 
  height: auto; 
  background-color: #f2f2f2; 
 } 
  
 .loginBtn { 
  width: 80%; 
  margin-top: 70rpx; 
 } 