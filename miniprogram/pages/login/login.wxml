<!--pages/login/login.wxml-->
<view class="container">

  <!--header-->
  <view class="header">
    <image class="header-img" src="https://i.loli.net/2021/04/30/CLXOajNA6E8dt3h.png"></image>
  </view>

  <view class="login-view"> 

    <view class="inputView"> 
      <image class="nameImage" src="../../images/name.png"></image> 
      <label class="loginLab">学号</label> 
      <input class="inputText" placeholder="请输入学号" bindinput="accountInput" /> 
    </view> 

    <view class="line"></view> 

    <!--密码--> 
    <view class="inputView"> 
      <image class="keyImage" src="../../images/key.png"></image> 
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
    </view> 

    <!--按钮--> 
    <view class="loginBtnView"> 
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="loginRequest">登录</button> 
    </view> 

  </view> 

</view> 
