/* pages/organization/organization.wxss */
.container {
  width: 100%;
  background-color: #f6f6f6;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 21px;
  padding-bottom: 21px;
  background-color: white;
}

.header-avatar {
  width: 76px;
  height: 76px;
  border-radius: 15px;
  align-self: center;
  justify-self: center;
}

.header-title {
  margin-top: 19px;
  align-self: center;
  justify-self: center;
}

.organization-cell {
  width: 100%;
  margin-top: 13px;
  padding-top: 16px;
  padding-bottom: 16px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: white;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.organization-cell-title {
  margin-left: 16px;
  align-self: center;
}

.organization-cell-content {
  margin-right: 16px;
  display: flex;
  flex-direction: row;
  align-self: center;
}

.organization-cell-label {
  color: #888888;
  align-self: center;
  max-width: 200px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.organization-cell-more-icon {
  width: 16px;
  height: 16px;
  align-self: center;
}

.organization-chat-room {
  margin-top: 13px;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  transition: all 300ms ease;
}

.organization-chat-room-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #007aff;
  text-align: center;
}

.exit-organization {
  margin-top: 150rpx;
  width: 45%;
}
