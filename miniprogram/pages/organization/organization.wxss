/* pages/organization/organization.wxss */
@import "./organization.skeleton.wxss";

.container {
  width: 100%;
  height: 100vh;
  background: #f6f6f6;
  overflow: hidden;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 21rpx;
  padding-bottom: 21rpx;
  background-color: white;
}

.header-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 30rpx;
  align-self: center;
  justify-self: center;
}

.header-title {
  margin-top: 40rpx;
  align-self: center;
  justify-self: center;
}

.organization-cell {
  width: 100%;
  margin-top: 26rpx;
  padding-top: 32rpx;
  padding-bottom: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: white;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.organization-cell-title {
  margin-left: 32rpx;
  align-self: center;
}

.organization-cell-content {
  margin-right: 32rpx;
  display: flex;
  flex-direction: row;
  align-self: center;
}

.organization-cell-label {
  color: #888888;
  align-self: center;
  max-width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.organization-cell-more-icon {
  width: 32rpx;
  height: 32rpx;
  align-self: center;
}

.organization-chat-room {
  margin-top: 26rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  transition: all 300ms ease;
}

.organization-chat-room-text {
  width: 100%;
  line-height: 104rpx;
  font-size: 34rpx;
  color: #007aff;
  text-align: center;
}

.exit-organization {
  margin-top: 100rpx;
  width: 100%;
}